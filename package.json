{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "embedme": "^1.22.0",
    "eslint": "^7.9.0",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^26.4.2",
    "jest-environment-node": "^26.3.0",
    "lerna": "^3.22.1",
    "raw-loader": "^3.1.0",
    "terser-webpack-plugin": "^2.2.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "type": "module",
  "scripts": {
    "build:embedme": "lerna exec embedme README.md",
    "build:webpack": "lerna exec --parallel -- webpack --config ../../webpack/prod.js",
    "build:babel": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.spec.js,**/*.test.js",
    "build": "npm run build:embedme && npm run build:babel && npm run build:webpack",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "start:phaser3-ecs-examples": "cd ./packages/phaser3-ecs-examples && webpack-dev-server --config ../../webpack/base.cjs --open"
  },
  "jest": {
    "cacheDirectory": ".jest-cache",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "mjs",
      "node",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "@browndragon/(.+)$": "<rootDir>packages/$1/src"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(m?jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/packages/(?:.+?)/lib/"
    ],
    "transform": {
      "^.+\\.m?jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(@browndragon/.*))"
    ]
  }
}
